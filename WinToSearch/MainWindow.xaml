<Window x:Class="WinToSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinToSearch"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="WinToSearch" 
        Height="55" 
        Width="600"
        Topmost="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        WindowStartupLocation="CenterScreen">

    <Border x:Name="MainBorder" 
            CornerRadius="29" 
            Background="#F8F9FA" 
            BorderThickness="0" 
            RenderTransformOrigin="0.5,0.5"
            SnapsToDevicePixels="True"
            UseLayoutRounding="True">

        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" 
                            BlurRadius="24" 
                            Opacity="0.15" 
                            Color="Black" 
                            Direction="270" 
                            RenderingBias="Quality"/>
        </Border.Effect>

        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="0.95" />
        </Border.RenderTransform>

        <Grid>
            <Border CornerRadius="25" 
                    BorderThickness="1" 
                    BorderBrush="#E9ECEF" 
                    Margin="10,6,103,5"
                    Background="#FFFFFF">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" 
                                    Opacity="0.05" 
                                    Color="Black" 
                                    Direction="270" 
                                    RenderingBias="Quality"/>
                </Border.Effect>
            </Border>

            <Grid Margin="20,0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="/images/google.png" 
                       Stretch="Uniform" 
                       Width="20" 
                       Height="20"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       VerticalAlignment="Center" Grid.Column="1" Margin="14,0,526,-2"/>

                <TextBlock x:Name="SearchText" 
                          Grid.Column="1"
                          Text="Search with Google or type a URL"
                          Margin="55,0,-31,0"
                          VerticalAlignment="Center"
                          FontSize="14"
                          Foreground="#495057"
                          Opacity="0.8"/>
            </Grid>
            <Border CornerRadius="25" 
                BorderThickness="1" 
                BorderBrush="#E9ECEF" 
                Margin="502,5,10,6"
                Background="#FFFFFF">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" 
                        Opacity="0.05" 
                        Color="Black" 
                        Direction="270" 
                        RenderingBias="Quality"/>
                </Border.Effect>
            </Border>
        </Grid>
    </Border>
</Window>
